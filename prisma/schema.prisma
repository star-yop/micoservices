generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // o postgresql/mysql seg√∫n prefieras
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
}

enum Role {
  ESTUDIANTE
  DOCENTE
}
